.modalView {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	opacity: 0;
	outline: 0;
	-webkit-transform: scale(1.2);
	        transform: scale(1.2);
	-webkit-perspective: 2500rpx;
	        perspective: 2500rpx;
	background: rgba(0, 0, 0, 0.6);
	transition: all .3s ease-in-out;
	pointer-events: none;
	-webkit-backface-visibility: hidden;
	        backface-visibility: hidden;
	z-index: 999;
}
.modalView.show {
	opacity: 1;
	-webkit-transform: scale(1);
	        transform: scale(1);
	pointer-events: auto;
}
